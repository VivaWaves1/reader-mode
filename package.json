{
	"name": "reader-mode",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"build:service": "esbuild HttpExample/index.ts --bundle --platform=node --target=node16.14 --loader:.html=text --external:./node_modules/* --outfile=dist/HttpExample/index.js",
		"build:about": "esbuild AboutPage/index.ts --bundle --platform=node --target=node16.14 --loader:.html=text --external:./node_modules/* --outfile=dist/AboutPage/index.js",
		"build": "npm run build:service && npm run build:about",
		"check": "tsc --noEmit",
		"prestart": "npm run build",
		"start": "func start --typescript",
		"format": "prettier --write ."
	},
	"dependencies": {
		"@mozilla/readability": "^0.4.2",
		"cross-fetch": "^3.1.5",
		"jsdom": "^20.0.0"
	},
	"devDependencies": {
		"@azure/functions": "^3.0.0",
		"@types/jsdom": "^20.0.0",
		"@types/node": "16.x",
		"esbuild": "^0.15.10",
		"prettier": "2.7.1",
		"typescript": "^4.0.0"
	}
}
